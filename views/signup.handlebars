{{> nav }}

<main class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-12 p-5">
            <h1 class="text-center text-light">Sign Up To Get Started!</h1>
        </div>

        <div class="col-md-6">
            <form class="form signup-form form-control form-control-lg">
                <h2 class="mb-3">Signup</h2>

                <div class="row g-3"><div class="col-md-6">
                        <label for="firstName-signup" class="form-label">First Name:</label>
                        <input type="text" class="form-control" id="firstName-signup" placeholder="John" />
                    </div>
                    <div class="col-md-6">
                        <label for="lastName-signup" class="form-label">Last Name:</label>
                        <input type="text" class="form-control" id="lastName-signup" placeholder="Doe" />
                    </div>
                    <div class="col-md-6">
                        <label for="email-signup" class="form-label">Email:</label>
                        <input type="email" class="form-control" id="email-signup" placeholder="name@example.com" />
                    </div>
                    <div class="col-md-6">
                        <label for="password-signup" class="form-label">Password:</label>
                        <input type="password" class="form-control" id="password-signup" placeholder="Password123" />
                    </div>
                    <div class="col-8">
                        <label for="inputBday" class="form-label">Birthday:</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="inputBday" placeholder="07/22/2000" />
                            <span class="input-group-text">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar" viewBox="0 0 16 16">
                                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                                </svg>
                            </span>
                        </div>
                    </div>
                    <div class="col-4">
                        <label for="inputGender" class="form-label">Gender:</label>
                        <div class="input-group">
                            <select class="form-select" id="inputGender">
                                <option selected disabled>Please Select...</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="inputAddress" class="form-label">Address:</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" />
                    </div>
                    <div class="col-12">
                        <label for="inputAddress2" class="form-label">Address 2:</label>
                        <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor" />
                    </div>
                    <div class="col-md-6">
                        <label for="inputCity" class="form-label">City:</label>
                        <input type="text" class="form-control" id="inputCity" placeholder="Santa Barbara" />
                    </div>
                    <div class="col-md-4">
                        <label for="inputState" class="form-label">State</label>
                        <select id="inputState" class="form-select">
                            <option selected disabled>Choose...</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="inputZip" class="form-label">Zip:</label>
                        <input type="text" class="form-control" id="inputZip"  placeholder="93111"/>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Sign up</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>


{{> scripts }}
<script src="./js/signup.js"></script>
{{> footer }}