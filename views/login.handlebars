{{> nav }}

<main class="container">
    <div class="row">
        <div class="col-md-6">
            <form class="form login-form form-control form-control-lg">
                <h2 class="mb-3">Login</h2>
                <div class="form-group mb-3">
                    <label for="email-login">Email:</label>
                    <input type="email" class="form-control" id="email-login" placeholder="name@example.com" />
                </div>
                <div class="form-group mb-3">
                    <label for="password-login">Password:</label>
                    <input type="password" class="form-control" id="password-login" placeholder="Password" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Log in</button>
                </div>
            </form>
        </div>

        <div class="col-md-6">
            <form class="form signup-form form-control form-control-lg">
                <h2 class="mb-3">Signup</h2>

                <div class="row g-3"><div class="col-md-6">
                        <label for="firstName-signup" class="form-label">First Name:</label>
                        <input type="text" class="form-control" id="firstName-signup" placeholder="John" />
                    </div>
                    <div class="col-md-6">
                        <label for="inputPassword4" class="form-label">Last Name:</label>
                        <input type="text" class="form-control" id="lastName-signup" placeholder="Doe" />
                    </div>
                    <div class="col-md-6">
                        <label for="email-signup" class="form-label">Email:</label>
                        <input type="email" class="form-control" id="email-signup" placeholder="name@example.com" />
                    </div>
                    <div class="col-md-6">
                        <label for="password-signup" class="form-label">Password:</label>
                        <input type="password" class="form-control" id="password-signup" placeholder="Password123" />
                    </div>
                    <div class="col-12">
                        <label for="inputAddress" class="form-label">Address</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" />
                    </div>
                    <div class="col-12">
                        <label for="inputAddress2" class="form-label">Address 2</label>
                        <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor" />
                    </div>
                    <div class="col-md-6">
                        <label for="inputCity" class="form-label">City</label>
                        <input type="text" class="form-control" id="inputCity" placeholder="Santa Barbara" />
                    </div>
                    <div class="col-md-4">
                        <label for="inputState" class="form-label">State</label>
                        <select id="inputState" class="form-select">
                        <option selected>Choose...</option>
                        <option>...</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="inputZip" class="form-label">Zip</label>
                        <input type="text" class="form-control" id="inputZip"  placeholder="93111"/>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </div>
                </div>
                {{!-- <div class="form-group">
                    <button class="btn btn-primary" type="submit">signup</button>
                </div> --}}
            </form>
        </div>
    </div>
</main>



{{> scripts }}
<script src="./js/login.js"></script>
{{> footer }}