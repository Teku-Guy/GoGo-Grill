{{> nav }}

<main class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-12 p-5">
            <h1 class="text-center text-light">Log in to Get Started!</h1>
        </div>
        <div class="col-lg-6">
            <form class="form login-form form-control form-control-lg">
                <h2 class="my-3">Login</h2>
                <div class="form-group mb-3">
                    <label for="email-login">Email:</label>
                    <input type="email" class="form-control" id="email-login" placeholder="name@example.com" />
                </div>
                <div class="form-group mb-4">
                    <label for="password-login">Password:</label>
                    <input type="password" class="form-control" id="password-login" placeholder="Password" />
                </div>
                <div class="form-group justify-content-right mb-3">
                    <button class="btn btn-primary" type="submit">Log in</button>
                </div>
            </form>
        </div>

    </div>
</main>

{{> scripts }}
<script src="./js/login.js"></script>
{{> footer }}